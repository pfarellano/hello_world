<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Segundo nombre</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Fecha nacimiento</th>
      <th>Rut</th>
      <th>Direccion</th>
      <th>Prevision</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Ocupacion</th>
      <th>Ciudad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombre %></td>
        <td><%= paciente.segundo_nombre %></td>
        <td><%= paciente.apellido_paterno %></td>
        <td><%= paciente.apellido_materno %></td>
        <td><%= paciente.fecha_nacimiento %></td>
        <td><%= paciente.rut %></td>
        <td><%= paciente.direccion %></td>
        <td><%= paciente.prevision %></td>
        <td><%= paciente.telefono %></td>
        <td><%= paciente.celular %></td>
        <td><%= paciente.ocupacion %></td>
        <td><%= paciente.ciudad %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

