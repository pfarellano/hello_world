<p id="notice"><%= notice %></p>

<h2>Pacientes</h2>


<%= link_to 'Nuevo Paciente', new_paciente_path, :class => "button" %>
<br>
<br>
<%= form_tag(pacientes_path, :method => "GET") do %>
                 Buscar Paciente <%= text_field_tag :name, params[:name]%>
                 <%= submit_tag 'Buscar', name: nil%>
               <% end %>
               <br>
               <br>
<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Fecha nacimiento</th>
      <th>Rut</th>
      <th>Dirección</th>
      <th>Previsión</th>
      <th>Teléfono</th>
      <th>Celular</th>
      <th>Ocupación</th>
      <th>Ciudad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombre+" "+paciente.segundo_nombre %></td>
        <td><%= paciente.apellido_paterno+" "+paciente.apellido_materno %></td>
        <td><%= paciente.fecha_nacimiento %></td>
        <td><%= paciente.rut %></td>
        <td><%= paciente.direccion %></td>
        <td><%= paciente.prevision %></td>
        <td><%= paciente.telefono %></td>
        <td><%= paciente.celular %></td>
        <td><%= paciente.ocupacion %></td>
        <td><%= paciente.ciudad %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
